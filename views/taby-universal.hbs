<html>
  <head>
    <title>MeCard - {{personal.firstName}} {{personal.lastName}}</title>
    <link rel="icon" href="favicon.ico" type="image/x-icon">

    <meta property="og:title" content="MeCard" />
    <meta property="og:description" content="Hi, I am {{personal.firstName}} {{personal.lastName}}. This is my MeCard." />
    <meta property="og:type" content="website" />
    <meta name="theme-color" content="#fcc47d">
    <link rel="apple-touch-icon" href="https://storage.googleapis.com/taby-app-media/web/taby-logo-round.png"/>
    <link rel="manifest" href="{{mecard.url}}">

    <style>
      html, body {
        height: 100%;
        font-family: 'Poppins';
      }

      body, div {
        box-sizing: border-box;
        -moz-box-sizing: border-box;
        -webkit-box-sizing: border-box;
        margin: 0;
      }

      div {
        box-sizing: border-box;
        -moz-box-sizing: border-box;
        -webkit-box-sizing: border-box;
        margin: 0;
      }

      .small-vertical-gap {
        height: 8px;
      }

      .device-bound {
        width: 100vw;
        height: 100vh;
        overflow: hidden;
      }

      .background-base {
        width: 100%;
        height: 100%;
        background-color: #fcc47d;
        overflow: hidden;
      }

      @media only screen and (orientation: landscape) {
        .background-highlight {
          position: absolute;
          width: 100%;
          height: 100%;
          background-color: #759d99;
          -webkit-clip-path: polygon(66% 0%, 100% 0%, 100% 100%, 50% 100%);
          clip-path: polygon(66% 0%, 100% 0%, 100% 100%, 50% 100%);
        }
      }

      @media only screen and (orientation: portrait) {
        .background-highlight {
          position: absolute;
          width: 100%;
          height: 100%;
          background-color: #759d99;
          -webkit-clip-path: polygon(0% 66%, 100% 50%, 100% 100%, 0% 100%);
          clip-path: polygon(0% 66%, 100% 50%, 100% 100%, 0% 100%);
        }
      }

      .h1-label {
        font-family: 'Poppins';
        margin-bottom: 0px;
        font-weight: 600;
      }

      .h3-label {
        font-family: 'Poppins';
        margin-top: 0px;
        margin-bottom: 30px;
        font-weight: 300;
        font-size: 20px;
      }

      @media only screen and (orientation: landscape) {
        .h4-label {
          font-family: 'Poppins';
          color: white;
          margin-top: 0px;
          margin-bottom: 8px;
          font-weight: 500;
          font-size: 16px;
        }
      }

      @media only screen and (orientation: portrait) {
        .h4-label {
          font-family: 'Poppins';
          margin-top: 0px;
          margin-bottom: 8px;
          font-weight: 500;
          font-size: 16px;
        }
      }

      @media only screen and (orientation: landscape) {
        .h4-label-heavy {
          font-family: 'Poppins';
          color: #333333;
          margin-top: 0px;
          margin-bottom: 8px;
          font-weight: 700;
          font-size: 16px;
        }
      }
      @media only screen and (orientation: portrait) {
        .h4-label-heavy {
          font-family: 'Poppins';
          color: white;
          margin-top: 0px;
          margin-bottom: 8px;
          font-weight: 700;
          font-size: 16px;
        }
      }

      .item {
        font-family: 'Poppins';
        font-size: 14px;
        color: #333333;
        font-weight: 400;
        margin-top: 2px;
        margin-bottom: 2px;
      }

      @media only screen and (orientation: landscape) {
        .qr-section {
          position: absolute;
          right: 15px;
          top: 50px;
        }
      }
    </style>
    <meta name="viewport" content="width=device-width, initial-scale=1.0">

    <link rel="preconnect" href="https://fonts.gstatic.com">
    <link href="https://fonts.googleapis.com/css2?family=Poppins" rel="stylesheet">
    <link rel="stylesheet" href="https://maxcdn.bootstrapcdn.com/bootstrap/3.3.7/css/bootstrap.min.css" integrity="sha384-BVYiiSIFeK1dGmJRAkycuHAHRg32OmUcww7on3RYdg4Va+PmSTsz/K68vbdEjh4u" crossorigin="anonymous">
  </head>

  <body style="display: flex; flex-direction: column; width: 100vw; align-items: center; background-color: #ffffff;">
    <input type="hidden" id="qrUrl" name="qrUrl" value="{{vcard.url}}" />
    <div class="device-bound">
      <div class="background-base">
        <div class="background-highlight"></div>
      </div>

      <div style="position: absolute; left: 0; top: 0; display: flex; flex-direction: row; height: 100%; width: 100%; align-items: flex-end; justify-content: flex-end;">
        <img src="https://storage.googleapis.com/taby-app-media/web/taby-logo-white.png" alt="logo" width="90" height="30" style="margin-right: 25px; margin-bottom: 32px;" />
      </div>

      <div style="width: 100%; height: 100%; position: absolute; left: 0; top: 0; padding: 16px; display: flex; flex-direction: column; justify-content: space-between;">
        <div class="data-section">
          <h1 class="h1-label">{{personal.firstName}} {{personal.lastName}}</h1>
          <h3 class="h3-label">{{career.position}}</h3>

          <a href="tel:{{contact.phoneNumber}}"><p class="item">Phone: {{contact.phoneNumber}}</p></a>
          <a href="mailto:{{contact.email}}"><p class="item">Email: {{contact.email}}</p></a>

          <div class="small-vertical-gap"></div>

          <a href="{{contact.wechat.url}}"><p class="item">Wechat: {{contact.wechat.handle}}</p></a>
          <a href="{{contact.linkedIn.url}}"><p class="item">LinkedIn: {{contact.linkedIn.handle}}</p></a>
          <a href="{{contact.github.url}}"><p class="item">GitHub: {{contact.github.handle}}</p></a>
        </div>

        <div class="data-section" style="width: 100%; display: flex; flex-direction: row; justify-content: center;">
          <div class="qr-section" style="background-color: white; padding: 10px; border-radius: 10px;">
            <img src="https://api.qrserver.com/v1/create-qr-code/?data={{vcard.url}}&amp;size=150x150" alt="vcard-qr"/>
          </div>
        </div>

        <div class="data-section">
          <h4 class="h4-label-heavy">{{career.company.name}}</h4>
          <h4 class="h4-label"><a href="{{career.company.website}}">{{career.company.website}}</a></h4>
        </div>
      </div>
    </div>

    <script>
      if ('serviceWorker' in navigator) {
        navigator.serviceWorker.register('//service-worker.js');
      }
    </script>
  </body>
</html>